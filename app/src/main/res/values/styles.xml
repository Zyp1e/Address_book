<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_image</item>
    </style>
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Elegant" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="colorPrimary">@color/elegantPrimary</item>
        <item name="colorPrimaryDark">@color/elegantPrimaryDark</item>
        <item name="colorAccent">@color/elegantAccent</item>
        <item name="android:windowBackground">@color/elegantBackground</item>
        <item name="android:textColor">@color/elegantTextColorPrimary</item>
        <item name="android:statusBarColor">@color/elegantPrimaryDark</item>
        <item name="android:actionBarStyle">@style/ActionBar.Elegant</item>
    </style>

    <style name="ActionBar.Elegant" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/elegantPrimary</item>
        <item name="titleTextStyle">@style/ActionBar.Elegant.TitleText</item>
    </style>

    <style name="ActionBar.Elegant.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/elegantTextColorPrimary</item>
    </style>
</resources>
